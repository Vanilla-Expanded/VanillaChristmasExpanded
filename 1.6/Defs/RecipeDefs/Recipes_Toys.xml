<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<RecipeDef>
		<defName>VCE_MakeToy_Cloth</defName>
		<label>make a plushie toy</label>
		<description>Make a small toy out of cloth.</description>
		<jobString> Making toy out of cloth.</jobString>
		<workAmount>3500</workAmount>
		<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
		<workSkill>Artistic</workSkill>
		<effectWorking>Tailor</effectWorking>
		<soundWorking>Recipe_Machining</soundWorking>
		<skillRequirements>
			<Artistic>6</Artistic>
		</skillRequirements>
		<recipeUsers>
			<li>ElectricTailoringBench</li>
			<li>HandTailoringBench</li>
		</recipeUsers>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Cloth</li>
					</thingDefs>
				</filter>
				<count>40</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Cloth</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<VCE_Toy_Cloth>1</VCE_Toy_Cloth>
		</products>
	</RecipeDef>
	
