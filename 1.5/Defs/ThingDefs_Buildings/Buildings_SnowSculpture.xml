<?xml version="1.0" encoding="UTF-8"?>
<Defs>
	<ThingDef ParentName="SculptureBase">
		<defName>VCE_SnowSculpture</defName>
		<label>snow sculpture</label>
		<description>A person-sized sculpture out of snow, representing an artistic form of a human being. Whilst it will melt in the summer, it will continuously provide festive favor as long as it’s kept ‘alive’.</description>
		<uiIconPath>Things/Building/Sculptures/SnowSculpture_Normal</uiIconPath>
		<thingClass>VanillaChristmasExpanded.SnowSculpture</thingClass>
		<drawerType>MapMeshAndRealTime</drawerType>
		<graphicData>
			<texPath>Things/Building/Sculptures/SnowSculpture_Awful</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shadowData>
				<volume>(0.3, 0.6, 0.3)</volume>
				<offset>(0,0,-0.1)</offset>
			</shadowData>
			<drawSize>2</drawSize>
		</graphicData>
		<tickerType>Normal</tickerType>
		<costList>
			<VCE_Snow>50</VCE_Snow>
		</costList>
		
		<statBases>
			<Mass>7</Mass>
			<MarketValue>75</MarketValue>
			<MaxHitPoints>150</MaxHitPoints>
			<Flammability>1</Flammability>
			<WorkToMake>30000</WorkToMake>
			<Beauty>100</Beauty>
		</statBases>
		<pathCost>14</pathCost>
		<fillPercent>0.5</fillPercent>
		<comps>
			
			<li>
				<compClass>CompQuality</compClass>
			</li>
		</comps>
		<modExtensions>
			<li Class="VanillaChristmasExpanded.GraphicsByQualityExtension">
